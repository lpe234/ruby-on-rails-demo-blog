<h1>Add a new post</h1>

<%= form_for @post do |f| %>

    <% if @post.errors.any? %>
      <h3>Errors</h3>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit 'New Post' %>
    </p>
<% end %>
